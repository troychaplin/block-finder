{
	"name": "block-finder",
	"version": "1.0.7",
	"description": "Add block checks in the editor to support publishing accessible content",
	"author": "Troy Chaplin",
	"license": "GPL-2.0-or-later",
	"main": "build/index.js",
	"scripts": {
		"build": "wp-scripts build",
		"start": "wp-scripts start",
		"lint": "npm run lint:js && npm run lint:php && npm run lint:css",
		"format": "npm run format:js && npm run format:php && npm run format:css",
		"lint:js": "wp-scripts lint-js --max-warnings=0",
		"format:js": "wp-scripts lint-js --fix",
		"lint:css": "stylelint \"**/*.scss\" --max-warnings=0",
		"format:css": "stylelint \"**/*.scss\" --fix",
		"lint:php": "composer run lint",
		"format:php": "composer format",
		"clean": "rm -rf node_modules ; rm package-lock.json ; npm install",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "wp-scripts build && wp-scripts plugin-zip",
		"prepare": "husky"
	},
	"devDependencies": {
		"@wordpress/env": "^10.38.0",
		"@wordpress/eslint-plugin": "^24.0.0",
		"@wordpress/prettier-config": "^4.38.0",
		"@wordpress/scripts": "^31.3.0",
		"@wordpress/stylelint-config": "^23.30.0",
		"eslint-config-prettier": "^10.1.8",
		"husky": "^9.1.7",
		"stylelint": "^16.25.0",
		"stylelint-scss": "^6.12.1",
		"typescript": "^5.9.3"
	}
}
